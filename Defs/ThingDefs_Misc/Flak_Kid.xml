<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ======================================= Industrial =======================================-->
  
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>RoboSheepz_Apparel_KidFlakVest</defName>
    <label>kid flak vest</label>
    <description>A kid-sized vest with armor plates inserted on the chest and back. Should help protect your child soldiers from chest-bound bullets. Tough luck if the bullet is going anywhere else.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>220</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>KidFlakVest/KidFlakVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.55</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.16</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>20</Cloth>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>KidFlakVest/KidFlakVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <developmentalStageFilter>Child</developmentalStageFilter>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>
    
</Defs>